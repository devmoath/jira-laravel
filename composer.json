{
    "name": "devmoath/jira-laravel",
    "description": "Jira PHP for Laravel is a supercharged PHP API client that allows you to interact with the Jira API and the Service Desk API",
    "keywords": [
        "laravel",
        "php",
        "jira",
        "sdk",
        "service-desk",
        "api",
        "client"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Moath Alhajri",
            "email": "moath.alhajrii@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "laravel/framework": "^9.0|^10.0",
        "devmoath/jira-php": "0.*"
    },
    "require-dev": {
        "laravel/pint": "^1.2.0",
        "pestphp/pest": "^2.0.0",
        "pestphp/pest-plugin-mock": "^2.0.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.8.6",
        "phpstan/phpstan-strict-rules": "^1.4",
        "rector/rector": "^0.14.4",
        "symfony/var-dumper": "^6.2.0"
    },
    "autoload": {
        "psr-4": {
            "Jira\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jira\\Laravel\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "pint --preset laravel -v --ansi",
        "refactor": "rector --debug --ansi",
        "test:lint": "pint --preset laravel --test -v --ansi",
        "test:refactor": "rector --dry-run --ansi",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --min=100 --coverage",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ]
    }
}
